<div class="row pull-right">
<%= form_for('user', :as => 'user', :url => '',:method => :post, :html => {:class => "form-signin"}) do |login| %>
<div  class="col-lg-2 pull-right" style="padding-top:20px">
	<button type="submit" class="btn btn-primary">Log in</button> 
</div>

<div class="col-lg-4 pull-right" style="padding-top:20px;padding-right:0px;"> 
	<div class="form-group"> 
		<%= login.password_field :password, :class => "form-control", :placeholder => "Password" %>  
		<label><%#= link_to "Forgot your password?", new_password_path('user') %> </label>
	</div> 
</div> 
<div class="col-lg-4 pull-right" style="padding-top:20px;padding-right:0px;"> 
	<div class="form-group">
		<%= login.text_field :login, :class => "form-control", :placeholder => "Username/Email" %> 
	</div> 
</div>

<% end %>  
</div>