<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Vehicle number allowed</th>
      <th>Institution number allowed</th>
      <th>User number allowed</th>
      <th>Account type</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.price %></td>
        <td><%= account.vehicle_number_allowed %></td>
        <td><%= account.institution_number_allowed %></td>
        <td><%= account.user_number_allowed %></td>
        <td><%= account.account_type %></td>
        <td><%= account.status %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

